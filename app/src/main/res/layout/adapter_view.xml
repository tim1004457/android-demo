<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/icon_view"
        android:padding="15dp"
        android:src="@drawable/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_view"
        android:id="@+id/app_name"
        android:layout_marginTop="10dp"
        android:text="AppName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_view"
        android:layout_below="@id/app_name"
        android:id="@+id/app_version_name"
         android:text="version_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_toRightOf="@id/app_version_name"
         android:id="@+id/app_version_code"
         android:paddingLeft="15dp"
        android:text="versioncode"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="packageName"
        android:layout_below="@+id/app_version_name"
        android:layout_toRightOf="@id/icon_view"
        android:layout_marginTop="5dp"
        android:id="@+id/pkg_name"/>
</RelativeLayout>